<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <!--<ImageView
        android:id="@+id/Background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/DarkenBackground" />-->

    <ImageView
        android:id="@+id/UBLostLogo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ub_lost_logo"
        android:scaleType="fitCenter"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@id/UBLostLogo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/transparent_box"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <TextView
                android:id="@+id/UBlostTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UBLost"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />

            <TextView
                android:id="@+id/helpTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Just helping you be on your way"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="username"
                    android:background="@drawable/roundedwhite"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:drawableLeft="@drawable/ic_user"
                    android:drawablePadding="7dp"
                    android:paddingStart="7dp"
                    android:id="@+id/username"
                    android:layout_marginBottom="10dp"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="password"
                android:background="@drawable/roundedwhite"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/ic_padlock"
                android:drawablePadding="7dp"
                android:paddingStart="7dp"
                android:inputType="textPassword"
                android:id="@+id/password"/>

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I agree to the Terms and Conditions"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:button="@drawable/radiobutton"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:text="Login"

                android:textStyle="normal"
                android:background="@drawable/login"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>