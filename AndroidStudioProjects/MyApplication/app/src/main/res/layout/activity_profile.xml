<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profileAvatar"
            android:layout_width="196dp"
            android:layout_height="196dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="110dp"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_user_profile2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/username"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/profileStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="134dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileMsgIcon"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="114dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/profileMessage"
                app:srcCompat="@drawable/ic_menu_share"
                android:tint="@color/colorPrimaryDark"/>

            <Button
                android:id="@+id/profileMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="137dp"
                android:text="Messages" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profilePubPathIcon"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="114dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/profilePubPath"
                app:srcCompat="@drawable/ic_menu_gallery"
                android:tint="@color/colorPrimaryDark"/>

            <Button
                android:id="@+id/profilePubPath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="111dp"
                android:text="Public Paths"
                android:tint="@color/colorPrimaryDark"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileSettingsIcon"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="114dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/profileSettings"
                app:srcCompat="@drawable/ic_menu_manage"
                android:tint="@color/colorPrimaryDark"/>

            <Button
                android:id="@+id/profileSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="138dp"
                android:text="Settings"
                android:tint="@color/colorPrimaryDark"/>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>
